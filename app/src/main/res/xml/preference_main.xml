<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		android:title="基本配置">

		<CheckBoxPreference
			android:key="block_all_main_page_publicity"
			android:title="屏蔽所有首页推广"
			android:summary="创作推广、游戏、大会员、会员购、必剪等"
			android:defaultValue="false" />

		<CheckBoxPreference
			android:key="show_block_log"
			android:title="输出拦截日志"
			android:summary="在框架控制台输出拦截日志"
			android:defaultValue="false" />

		<CheckBoxPreference
			android:key="toast_on_block"
			android:title="拦截时发出气泡信息"
			android:summary="显示拦截条数等信息"
			android:defaultValue="false" />
	</PreferenceCategory>

	<PreferenceCategory
		android:title="规则管理">

		<Preference
			android:key="rules_count_text" />

		<Preference
			android:key="add_rules"
			android:title="添加屏蔽规则"
			android:summary="根据关键词或正则表达式" />

		<Preference
			android:key="remove_rules"
			android:title="移除屏蔽规则"
			android:summary="按关键词搜索规则" />
	</PreferenceCategory>
</PreferenceScreen>